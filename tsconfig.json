{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@saas-starter-open/db": ["packages/db/src/index.ts"],
      "@saas-starter-open/db/*": ["packages/db/src/*"],
      "@saas-starter-open/auth": ["packages/auth/src/index.ts"],
      "@saas-starter-open/auth/*": ["packages/auth/src/*"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*"
  ]
}
