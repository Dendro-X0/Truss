# Environment variables for saas-starter-open
# Copy this file to .env and fill in the values as needed.

# Required for local development
DATABASE_URL=postgres://user:password@localhost:5432/saas_starter
BETTER_AUTH_SECRET=replace-with-a-long-random-string

# Public URLs
# Base URL for the Hono API used by the Next.js app
NEXT_PUBLIC_API_URL=http://localhost:8787

# URL of the Next.js route that returns the current Better Auth session
# Example assumes a get-session route at /api/auth/get-session
AUTH_SESSION_URL=http://localhost:3000/api/auth/get-session

# Optional: public URL of the Next.js app (when deployed)
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Stripe (not required for the placeholder billing implementation)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Optional: OAuth providers for Better Auth (GitHub and Google)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional: email provider for magic links and email flows
# EMAIL_FROM="SaaS Starter <no-reply@example.com>"
# RESEND_API_KEY=re_...
# or SMTP-style configuration instead of RESEND_API_KEY
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=user
# SMTP_PASSWORD=password
